<script>
  function unlock() {
    const phrase = document.getElementById('pass').value.trim().toLowerCase();
    const correct = "flame"; // <--- CHANGE THIS to your chosen secret phrase
    if (phrase === correct) {
      document.getElementById('gate').style.display = 'none';
      document.getElementById('scroll').style.display = 'block';
    } else {
      alert("The word does not open this door.");
    }
  }
</script>

